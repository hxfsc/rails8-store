<h1 class="mb-5">重设密码</h1>
<%= form_with model: Current.user, url: settings_password_path do |form| %>
  <% if form.object.errors.any? %>
    <div><%= form.object.errors.full_messages.first %></div>
  <% end %>

  <div class="mb-1">
    <%= form.label "新密码", class: "w-[80px] inline-block" %>
    <%= form.password_field :password_challenge,
                        required: true,
                        autocomplete: "current-password",
                        class: "border-2 border-gray-500 rounded-full px-3 py-1" %>
  </div>

  <div class="mb-1">
    <%= form.label "密码", class: "inline-block w-[80px]" %>
    <%= form.password_field :password,
                        class: "border-2 border-gray-500 rounded-full px-3 py-1",
                        required: true,
                        autocomplete: "new-password" %>
  </div>

  <div class="mb-1">
    <%= form.label "确认密码", class: "inline-block w-[80px]" %>
    <%= form.password_field :password_confirmation,
                        required: true,
                        class: "border-2 border-gray-500 rounded-full px-3 py-1",
                        autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.submit "确认",
                class:
                  "rounded-full px-5 cursor-pointer py-2 bg-green-600 text-white" %>
  </div>
<% end %>
